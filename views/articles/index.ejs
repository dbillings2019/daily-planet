<% include ../partials/header.ejs %>

<h1>Articles</h1>

<% articles.forEach(function(article, id) { %>
<div class="articlebox">
    <h3><%= article.title %></h3>
    <p><%= article.body %></p>
    <a href="/articles/<%= id %>/edit">Edit</a>
        <form method="POST" action="/articles/<%= id %>?_method=DELETE">
            <input type="submit" value="Delete">
        </form>
</div>
<%});%>

